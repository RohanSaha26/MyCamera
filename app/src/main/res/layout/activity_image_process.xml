<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageProcess">


    <ImageView
        android:id="@+id/imgProcessView"
        android:layout_width="172dp"
        android:layout_height="263dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        tools:srcCompat="@tools:sample/avatars" />

    <CheckBox
        android:id="@+id/saveRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Red"
        app:layout_constraintBottom_toTopOf="@+id/saveImg"
        app:layout_constraintEnd_toStartOf="@+id/saveGrayscale"
        app:layout_constraintHorizontal_bias="0.244"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProcessView"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/saveBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blue"
        app:layout_constraintBottom_toTopOf="@+id/saveImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveGreen"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/saveGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green"
        app:layout_constraintBottom_toTopOf="@+id/saveImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveRed"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/saveGrayscale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Grayscale"
        app:layout_constraintBottom_toTopOf="@+id/saveImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.781"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProcessView"
        app:layout_constraintVertical_bias="0.049" />

    <CheckBox
        android:id="@+id/saveNegativeColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="Negative Color"
        app:layout_constraintBottom_toTopOf="@+id/saveImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toEndOf="@+id/saveBlue"
        app:layout_constraintTop_toBottomOf="@+id/saveNegativeBW"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/saveNegativeBW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:text="Negative BW"
        app:layout_constraintBottom_toTopOf="@+id/saveImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toEndOf="@+id/saveGreen"
        app:layout_constraintTop_toBottomOf="@+id/saveGrayscale"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/saveMedianBlur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="52dp"
        android:text="Median Blur"
        app:layout_constraintBottom_toTopOf="@+id/saveImg"
        app:layout_constraintEnd_toStartOf="@+id/saveSharpimage"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveBlue"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/saveSharpimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Sharp Image"
        app:layout_constraintBottom_toTopOf="@+id/saveImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.838"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveNegativeColor"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/saveRetinex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:text="Retinex(SSR)"
        app:layout_constraintBottom_toTopOf="@+id/saveImg"
        app:layout_constraintEnd_toStartOf="@+id/saveSharpimage"
        app:layout_constraintHorizontal_bias="0.671"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveMedianBlur"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/saveClahe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:text="CLAHE"
        app:layout_constraintBottom_toTopOf="@+id/saveImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.701"
        app:layout_constraintStart_toEndOf="@+id/saveRetinex"
        app:layout_constraintTop_toBottomOf="@+id/saveSharpimage"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/saveSaturated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturated Image(X2)"
        app:layout_constraintBottom_toTopOf="@+id/saveImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveRetinex"
        app:layout_constraintVertical_bias="0.0" />

    <CheckBox
        android:id="@+id/saveLaplacian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Laplacian"
        app:layout_constraintBottom_toTopOf="@+id/saveImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.781"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveClahe"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProcessView"
        app:layout_constraintVertical_bias="0.948"
        app:srcCompat="@drawable/save" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveImg"
        app:layout_constraintHorizontal_bias="0.848"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProcessView"
        app:layout_constraintVertical_bias="0.947"
        app:srcCompat="@drawable/edit" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/deleteImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/saveImg"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProcessView"
        app:layout_constraintVertical_bias="0.947"
        app:srcCompat="@drawable/delete" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/closeIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/deleteImg"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgProcessView"
        app:layout_constraintVertical_bias="0.947"
        app:srcCompat="@drawable/close" />

    <TextView
        android:id="@+id/pathRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded"
        android:text="Path"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toTopOf="@+id/saveImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveSaturated"
        app:layout_constraintVertical_bias="0.719" />



</androidx.constraintlayout.widget.ConstraintLayout>